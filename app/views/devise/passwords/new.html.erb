<h2 class='text-center' style="margin: 4rem;">Forgot your password?</h2>

<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { class: 'col-md-4 px-4', method: :post }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <div class="actions">
    <%= f.submit "Reset Password", class: "btn btn-primary mb-4" %>
  </div>

<%= render "devise/shared/links" %>

<% end %>

